#!/usr/bin/env php
<?php

use RocketLab\Bundle\Init\Libs\Init;
use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Console\Output\ConsoleOutput;

require __DIR__ . '/vendor/autoload.php';

$config = require __DIR__ . '/environments/index.php';
$taskList = [
    'copyFiles' => 'RocketLab\Bundle\Init\Tasks\CopyFilesTask',
    'setCookieValidationKey' => 'RocketLab\Bundle\Init\Tasks\GenerateCookieValidationKeyTask',
    'setWritable' => 'RocketLab\Bundle\Init\Tasks\SetWritableTask',
    'setExecutable' => 'RocketLab\Bundle\Init\Tasks\SetExecutableTask',
    'createSymlink' => 'RocketLab\Bundle\Init\Tasks\CreateSymlinkTask',
];
$input = new ArgvInput;
$output = new ConsoleOutput;
$initLib = new Init($input, $output, $config, $taskList);
$initLib->run();
